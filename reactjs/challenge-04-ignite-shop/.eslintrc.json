{
  "extends": ["next", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 80,
      "tabWidth": 2,
      "semi": false,
      "trailingComma": "none",
      "singleQuote": true,
      "arrowParens": "avoid",
      "bracketSameLine": false,
      "bracketSpacing": true
    }]
  }
}
